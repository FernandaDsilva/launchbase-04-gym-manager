{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <div class="header">
            <a href="/members/create" class="button">novo</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Altura</th>
                    <th>Peso</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>{{ member.name }}</td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.height }}cm</td>
                        <td>{{ member.weight }}kg</td>
                        <td>
                            <a href="/members/{{ member.id }}" class="button">ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}